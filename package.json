{
  "name": "money-manager",
  "version": "1.0.0",
  "private": true,
  "main": "./Electron/build/electron.js",
  "scripts": {
    "dev": "vue-cli-service serve",
    "build:vue": "vue-cli-service build",
    "build:electron": "tsc -p Electron/tsconfig.electron.json",
    "build": "npm run build:vue && npm run build:electron",
    "start:electron": "electron ./Electron/build/electron.js",
    "start": "npm run build && concurrently \"npm run start:electron\"",
    "postinstall": "npm rebuild better-sqlite3 --runtime=electron --target=$(npx electron --version) --dist-url=https://electronjs.org/headers",
    "dist": "electron-builder"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "pinia": "^2.2.4",
    "vue": "^3.2.13",
    "better-sqlite3": "^11.7.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.7.0",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "build": {
    "asar": false,
    "appId": "money-manager-v0",
    "productName": "Money Manager",
    "win": {
      "target": "nsis"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
